<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<div class="table">

  <% @tweets.each do |tweet| %>
     <div class="well">
      <ul>
       
        <li><%= tweet.user.username %></li>
        <li><%= tweet.user.avatar.url %></li>
         <li><%= tweet.message %></li>
         <li><%= link_to 'Show', tweet %><%= link_to 'Edit', edit_tweet_path(tweet) %><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?'}  %></li>
      </ul>
    </div>
    <% end %>
</div>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
